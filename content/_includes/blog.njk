---
layout: base.njk
---

{% if date %}
  <p id="time">
    <time datetime="{{date.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'})}}">
      {{date.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'})}}
    </time>
  </p>
{% endif %}

{% if category %}
  <p id="category">{{category}}</p>
{% endif %}

{% if summary %}
  <p id="summary">{{summary}}</p>
{% endif %}

{{content | safe}}
